
			<!-- HEADING -->
		<h2 class="subcontainer">Lectures Timetable</h2>

<section class="services wow fadeInLeftBig animated" data-wow-offset="30" data-wow-duration="4s" id="services">
<div class="container">	
	<!-- SECTION HEADER -->
	<div class="section-header">
      <% @courses.each do |course| %>

      
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h3><%= course.course_name %></h3></div>
      <div class="panel-body">
        <p><%= course.course_info %></p>
      </div>

      <!-- Table -->
      <table class="table hover">
        <thead>
          <tr>
            <th>Venue:</th>
            <th>Date:</th>
            <th>Start Time:</th>
            <th>End Time:</th>
          </tr>
        </thead>
         <% course.lectures.order('start_time desc').each do |lecture| %>
        <tbody>
          <tr>
            <td><%= lecture.venue %></td>
            <td><%= lecture.start_time.strftime("%d %b %Y - %a") %></td>
            <td><%= lecture.start_time.strftime("%I:%M %p") %></td>
            <td><%= lecture.end_time.strftime("%I:%M %p") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
			<% end %>
</div> 
</section>  <!-- / END services SECTION -->
	
</div>